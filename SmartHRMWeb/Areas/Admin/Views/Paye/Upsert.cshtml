@model SmartHRM.Models.Paye
<div class="card shadow-none border border-300 mb-3">
<form method="post" asp-action="Upsert" >
    <div class="row">
        <div class="col-12">
            <div class="p-3 mt-4" row>
                <div class="col-12 pb-2">
                    <h4 class="text-primary">@(Model.Id != 0 ? "Update" : "Create")  Paye</h4>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <input asp-for="Id" hidden />
                <div class="mb-3">
                    <label asp-for="LowerLimit"></label>
                    <input asp-for="LowerLimit" class="form-control" />
                    <span asp-validation-for="LowerLimit" class="text-danger"></span>
                </div>
                    <div class="mb-3">
                        <label asp-for="UpperLimit"></label>
                        <input asp-for="UpperLimit" class="form-control" />
                        <span asp-validation-for="UpperLimit" class="text-danger"></span>
                    </div>
                <div class="mb-3">
                    <label asp-for="Rate"></label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>


                    <div class="col-12">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary me-1 mb-1">Update</button>
                        }
                        else
                        {
                            <button type="submit" onclick="return ValidateInput()" class="btn btn-primary me-1 mb-1">Create</button>
                        }

                        <a asp-controller="Paye" asp-action="Index" class="btn btn-secondary me-1 mb-1">
                            Back to List
                        </a>
                    </div>

                

            </div>

        </div>
       
    </div>   

</form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
   
}
